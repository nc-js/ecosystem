{
	"private": true,
	"version": "1.0.0",
	"name": "node-ts-esm-esbuild",
	"description": "Node, TypeScript (ESM), esbuild",
	"type": "module",
	"types": "dist/index.d.ts",
	"module": "dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"build": "npm run build:prod",
		"build:prod": "npm run types && esbuild src/index.ts --bundle --minify --target=chrome58,firefox57,safari11,edge16 --outdir=dist",
		"build:dev": "npm run types && esbuild src/index.ts --bundle --sourcemap --target=chrome58,firefox57,safari11,edge16 --outdir=dist",
		"types": "tsc"
	},
	"devDependencies": {
		"esbuild": "0.19.11",
		"typescript": "^5.3.3"
	}
}
