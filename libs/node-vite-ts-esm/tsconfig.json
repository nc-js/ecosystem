{
	"include": ["./src"],
	"exclude": ["./dist/**/*"],
	"compilerOptions": {
		"composite": true,
		/* base options */
		"esModuleInterop": true,
		"skipLibCheck": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"verbatimModuleSyntax": true,
		"moduleDetection": "force",
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"isolatedModules": true,
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true
	}
}
